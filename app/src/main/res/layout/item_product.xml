<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:cardElevation="4dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/cardview_dark_background"
   >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >


        <TextView
            android:id="@+id/product_name"
            android:textSize="18sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="#fff"
            android:text="Rice" />

        <TextView
            android:id="@+id/product_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/product_name"
            android:layout_marginLeft="30dp"

            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/product_name"
            android:layout_toRightOf="@+id/product_name"
            android:text="15" />

        <TextView
            android:id="@+id/product_gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_alignBottom="@+id/product_Price"

            android:layout_toEndOf="@+id/product_Price"
            android:layout_toRightOf="@+id/product_Price"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="5%" />

        <TextView
            android:id="@+id/TotalCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_alignBottom="@+id/product_gst"
            android:layout_toRightOf="@+id/product_gst"

            android:textSize="18sp"
            android:textColor="#fff"

            android:text="100.0" />
    </RelativeLayout>
</android.support.v7.widget.CardView>



